<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.malangstore.dao.ProductDao">
    <select id="productList" parameterType="int" resultType="com.malangstore.beans.Product">
        SELECT * FROM product
            WHERE subcategory_no = #{subcategory_no}
                ORDER BY product_reg_date DESC
                    LIMIT 20 OFFSET #{page}
    </select>

    <select id="productListCount" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM product
            WHERE subcategory_no = #{subcategory_no}
    </select>

    <insert id="registProduct" parameterType="com.malangstore.beans.Product" useGeneratedKeys="true" keyProperty="product_no">
        INSERT INTO product VALUES (NEXTVAL('seq_product_no'), #{product_name}, #{product_price}, #{product_delivery}, #{product_count}, #{product_detail}, CURRENT_TIMESTAMP(0), #{subcategory_no})
    </insert>

    <insert id="insertPhoto" parameterType="java.util.List">
        INSERT INTO photo
            VALUES
            <foreach collection="list" item="item" index="index" separator=",">
                (NEXTVAL('seq_photo_no'), #{item.photo_path}, #{item.product_no})
            </foreach>
    </insert>
</mapper>